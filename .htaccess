RewriteEngine On

# ===============================
# SECURITY: Block direct access to JSON files in /data
# ===============================
<Directory "data">
    <FilesMatch "\.(json)$">
        Require all denied
    </FilesMatch>
</Directory>

# ===============================
# Remove .php extension (SEO-friendly URLs)
# ===============================
# Redirect requests like /file.php to /file
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]
RewriteRule ^ /%1 [R=301,L,NE]

# Internally rewrite URLs to .php if the file exists
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+?)/?$ $1.php [L]

# ===============================
# Default index file
# ===============================
DirectoryIndex index.php
